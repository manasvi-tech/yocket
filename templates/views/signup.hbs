<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yocket</title>
    <link rel="stylesheet" href="/css/signup.css">
</head>

<body>
    <div class="signup-page">
        <div class="partial">
            {{>loginPartial}}
        </div>
        <div class="container main side">
            <h1> Welcome to Yocket</h1>
            <h2>You are joining Indiaâ€™s largest study abroad network</h2>

            <div class="tabs">
                <div class="tab active" data-target="#login">Login</div>
                <div class="tab" data-target="#signup">Sign up</div>
            </div>

            <form class="form active" action="/login" method="POST" id="login">
                <input name="email" type="email" placeholder="Email" required>
                <input name="password" type="password" placeholder="Password" required>
                <button type="submit">Login</button>
            </form>
            
            <form action="/signup" method="POST" class="form" id="signup">
                <input name="email" type="email" placeholder="Email" required>
                <input name="password" type="password" placeholder="Password" required>
                <input name="cpassword" type="password" placeholder="Confirm Password" required>
                <button type="submit">Sign up</button>
            </form>
            <div class="or">
                <hr>
                Or
                <hr>
            </div>

            <a class="google-anchor" href="/auth/google">
                    <button class="google-login">
                        <img class="googleLogo" src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
                            alt="Google Logo" width="2%">
                        Continue with Google
                    </button>
                </a>

        </div>
    </div>

    <script>
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                document.querySelectorAll('.form').forEach(form => form.classList.remove('active'));
                document.querySelector(tab.getAttribute('data-target')).classList.add('active');
            });
        });
    </script>

</body>

</html>